// Prisma Schema for MySuperSystem
// Designed for PostgreSQL with Supabase

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER MODEL
// ============================================
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // bcrypt hashed
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  isDeleted Boolean  @default(false) @map("is_deleted")

  // Relations
  transactions         Transaction[]
  transactionCategories TransactionCategory[]
  tasks                Task[]
  passwordEntries      PasswordVault[]
  passwordCategories   PasswordCategory[]
  refreshTokens        RefreshToken[]

  @@map("users")
}

// ============================================
// REFRESH TOKEN MODEL (for JWT auth)
// ============================================
model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

// ============================================
// TRANSACTION MODELS (Money Dashboard)
// ============================================
model TransactionCategory {
  id        String   @id @default(uuid())
  name      String
  userId    String   @map("user_id")
  isDefault Boolean  @default(false) @map("is_default")
  createdAt DateTime @default(now()) @map("created_at")
  isDeleted Boolean  @default(false) @map("is_deleted")

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@unique([name, userId])
  @@map("transaction_categories")
}

model Transaction {
  id          String          @id @default(uuid())
  amount      Decimal         @db.Decimal(12, 2)
  type        TransactionType
  description String          @db.VarChar(255)
  date        DateTime        @db.Date
  userId      String          @map("user_id")
  categoryId  String          @map("category_id")
  createdAt   DateTime        @default(now()) @map("created_at")
  updatedAt   DateTime        @updatedAt @map("updated_at")
  isDeleted   Boolean         @default(false) @map("is_deleted")

  user     User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  category TransactionCategory @relation(fields: [categoryId], references: [id])

  @@map("transactions")
}

enum TransactionType {
  INCOME
  EXPENSE
}

// ============================================
// TASK MODELS (Tasks Dashboard)
// ============================================
model Task {
  id          String     @id @default(uuid())
  title       String     @db.VarChar(100)
  description String?    @db.VarChar(300)
  status      TaskStatus @default(TODO)
  deadline    DateTime   @db.Date
  userId      String     @map("user_id")
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")
  isDeleted   Boolean    @default(false) @map("is_deleted")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tasks")
}

enum TaskStatus {
  TODO
  ONGOING
  COMPLETED
}

// ============================================
// PASSWORD VAULT MODELS
// ============================================
model PasswordCategory {
  id        String   @id @default(uuid())
  name      String
  userId    String   @map("user_id")
  isDefault Boolean  @default(false) @map("is_default")
  createdAt DateTime @default(now()) @map("created_at")
  isDeleted Boolean  @default(false) @map("is_deleted")

  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  passwords PasswordVault[]

  @@unique([name, userId])
  @@map("password_categories")
}

model PasswordVault {
  id             String   @id @default(uuid())
  website        String   @db.VarChar(100)
  username       String
  encryptedPassword String   @map("encrypted_password") // AES-256 encrypted
  notes          String?  @db.VarChar(500)
  userId         String   @map("user_id")
  categoryId     String   @map("category_id")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  isDeleted      Boolean  @default(false) @map("is_deleted")

  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  category PasswordCategory @relation(fields: [categoryId], references: [id])

  @@map("password_vault")
}
