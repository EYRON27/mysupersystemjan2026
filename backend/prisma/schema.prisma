// Prisma Schema for MySuperSystem
// Using SQLite for easy local development (no database server needed)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================
// USER MODEL
// ============================================
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // bcrypt hashed
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  isDeleted Boolean  @default(false) @map("is_deleted")

  // Relations
  transactions         Transaction[]
  transactionCategories TransactionCategory[]
  tasks                Task[]
  passwordEntries      PasswordVault[]
  passwordCategories   PasswordCategory[]
  refreshTokens        RefreshToken[]

  @@map("users")
}

// ============================================
// REFRESH TOKEN MODEL (for JWT auth)
// ============================================
model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

// ============================================
// TRANSACTION MODELS (Money Dashboard)
// ============================================
model TransactionCategory {
  id        String   @id @default(uuid())
  name      String
  userId    String   @map("user_id")
  isDefault Boolean  @default(false) @map("is_default")
  createdAt DateTime @default(now()) @map("created_at")
  isDeleted Boolean  @default(false) @map("is_deleted")

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@unique([name, userId])
  @@map("transaction_categories")
}

model Transaction {
  id          String   @id @default(uuid())
  amount      Decimal
  type        String   // INCOME or EXPENSE
  description String
  date        DateTime
  userId      String   @map("user_id")
  categoryId  String   @map("category_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  isDeleted   Boolean  @default(false) @map("is_deleted")

  user     User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  category TransactionCategory @relation(fields: [categoryId], references: [id])

  @@map("transactions")
}

// ============================================
// TASK MODELS (Tasks Dashboard)
// ============================================
model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  status      String   @default("TODO") // TODO, ONGOING, COMPLETED
  deadline    DateTime
  userId      String   @map("user_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  isDeleted   Boolean  @default(false) @map("is_deleted")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tasks")
}

// ============================================
// PASSWORD VAULT MODELS
// ============================================
model PasswordCategory {
  id        String   @id @default(uuid())
  name      String
  userId    String   @map("user_id")
  isDefault Boolean  @default(false) @map("is_default")
  createdAt DateTime @default(now()) @map("created_at")
  isDeleted Boolean  @default(false) @map("is_deleted")

  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  passwords PasswordVault[]

  @@unique([name, userId])
  @@map("password_categories")
}

model PasswordVault {
  id                String   @id @default(uuid())
  website           String
  username          String
  encryptedPassword String   @map("encrypted_password") // AES-256 encrypted
  notes             String?
  userId            String   @map("user_id")
  categoryId        String   @map("category_id")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  isDeleted         Boolean  @default(false) @map("is_deleted")

  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  category PasswordCategory @relation(fields: [categoryId], references: [id])

  @@map("password_vault")
}
